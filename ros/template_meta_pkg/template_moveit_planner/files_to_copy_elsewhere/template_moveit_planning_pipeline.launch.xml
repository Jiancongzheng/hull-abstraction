<launch>

  <!-- TEMPLATE_MOVEIT Plugin for MoveIt! -->
  <arg name="planning_plugin" value="template_moveit_interface/TEMPLATE_MOVEITPlanner" />

  <!-- The request adapters (plugins) used when planning with TEMPLATE_MOVEIT.
       ORDER MATTERS -->

  <arg name="planning_adapters" value="" />
  <!-- lexium_sts_planning_adapter/AddTimeParameterization
				       default_planner_request_adapters/FixWorkspaceBounds
				       default_planner_request_adapters/FixStartStateBounds
				       default_planner_request_adapters/FixStartStateCollision
                                       default_planner_request_adapters/FixStartStatePathConstraints" /> -->

  <!--   default_planner_request_adapters/AddTimeParameterization
         default_planner_request_adaptersAddIterativeSplineParameterization
         planning_adapters_tutorial/AddTimeParameterization   -->

  <arg name="start_state_max_bounds_error" value="0.1" />

  <param name="planning_plugin" value="$(arg planning_plugin)" />
  <param name="request_adapters" value="$(arg planning_adapters)" />
  <param name="start_state_max_bounds_error" value="$(arg start_state_max_bounds_error)" />

  <rosparam command="load" file="$(find lexium_sts_moveit_config)/config/template_moveit_planning.yaml"/>

</launch>
