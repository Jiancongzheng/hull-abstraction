<?xml version="1.0"?>
<robot name="example_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:arg name="robot_ns" default=""/>

    <!-- Prepend robot namespace if set -->
    <xacro:property name="prefix" value="$(arg robot_ns)/"/>
    <xacro:if value="${prefix == '/'}">
        <xacro:property name="prefix" value=""/>
    </xacro:if>

    <link name="${prefix}link_1">
        <visual>
            <origin xyz="0 0 0.25" rpy="0 0 0" />
            <geometry>
                <box size="0.5 0.5 0.5" />
            </geometry>
            <material name="blue">
                <color rgba="0.0 0.3294 0.6039 1.0"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <box size="0.5 0.5 0.5" />
            </geometry>
        </collision>
    </link>

    <link name="${prefix}link_2">
        <visual>
            <origin xyz="0 0 1.75" rpy="0 0 0" />
            <geometry>
                <cylinder length="3.0" radius="0.1" />
            </geometry>
            <material name="white">
                <color rgba="1.0 1.0 1.0 1.0"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 1.5" rpy="0 0 0" />
            <geometry>
                <cylinder length="3.0" radius="0.1" />
            </geometry>
        </collision>
    </link>

    <joint name="${prefix}joint_1" type="fixed">
        <origin xyz="0 0 0.25" rpy ="0 0 0" />
        <parent link="${prefix}link_1"/>
        <child link="${prefix}link_2" />
        <axis xyz="0 0 1" />
    </joint>

    <link name="${prefix}link_3">
        <visual>
            <origin xyz="0 0 0.0" rpy="0 0 0" />
            <geometry>
                <box size="0.5 0.5 0.5" />
            </geometry>
            <material name="blue">
                <color rgba="0.0 0.3294 0.6039 1.0"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0.5" rpy="0 0 0" />
            <geometry>
                <box size="0.5 0.5 0.5" />
            </geometry>
        </collision>
    </link>

    <joint name="${prefix}joint_2" type="prismatic">
        <origin xyz="0 0 0.5" rpy ="0 0 0" />
        <parent link="${prefix}link_2"/>
        <child link="${prefix}link_3" />
        <axis xyz="0 0 1" />
        <limit
            lower="0.0"
            upper="2.5"
            effort="1000.0"
            velocity="1000.0"
        />
    </joint>
</robot>
